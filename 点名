<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>随机名字抽签泡泡</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background-color: #000;
            color: #fff;
            font-family: 'Arial', sans-serif;
            overflow: hidden;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        
        .container {
            width: 90%;
            max-width: 1000px;
            text-align: center;
        }
        
        h1 {
            margin-bottom: 20px;
            color: #fff;
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }
        
        .input-area {
            margin-bottom: 30px;
            width: 100%;
        }
        
        textarea {
            width: 100%;
            height: 120px;
            padding: 15px;
            border-radius: 10px;
            background-color: #222;
            color: #fff;
            border: 2px solid #444;
            font-size: 16px;
            margin-bottom: 15px;
            resize: vertical;
        }
        
        .buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-bottom: 20px;
        }
        
        button {
            padding: 12px 25px;
            border: none;
            border-radius: 50px;
            background: linear-gradient(145deg, #6a11cb, #2575fc);
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
        
        button:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        }
        
        button:disabled {
            background: #555;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        #bubble-container {
            position: relative;
            width: 100%;
            height: 400px;
            border: 2px solid #333;
            border-radius: 15px;
            overflow: hidden;
            margin-bottom: 20px;
            background: rgba(0, 0, 0, 0.7);
        }
        
        .bubble {
            position: absolute;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #000;
            text-shadow: 0 0 3px rgba(255, 255, 255, 0.8);
            cursor: default;
            user-select: none;
            transition: transform 0.5s, box-shadow 0.5s;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
        }
        
        .selected {
            transform: scale(2.5);
            box-shadow: 0 0 30px rgba(255, 255, 255, 0.8), 0 0 50px rgba(255, 255, 255, 0.6);
            z-index: 100;
            animation: pulse 1.5s infinite alternate;
        }
        
        @keyframes pulse {
            from { transform: scale(2.5); }
            to { transform: scale(2.8); }
        }
        
        .result {
            font-size: 24px;
            margin-top: 20px;
            min-height: 40px;
            padding: 15px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.1);
            width: 100%;
        }
        
        .highlight {
            color: #ffcc00;
            text-shadow: 0 0 10px #ffcc00;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>随机名字抽签泡泡</h1>
        
        <div class="input-area">
            <textarea id="nameInput" placeholder="请粘贴全班名字，每行一个名字"></textarea>
            <div class="buttons">
                <button id="generateBtn">生成泡泡</button>
                <button id="startBtn" disabled>开始抽签</button>
                <button id="stopBtn" disabled>停止</button>
            </div>
        </div>
        
        <div id="bubble-container"></div>
        
        <div class="result" id="result">抽签结果将显示在这里</div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const nameInput = document.getElementById('nameInput');
            const generateBtn = document.getElementById('generateBtn');
            const startBtn = document.getElementById('startBtn');
            const stopBtn = document.getElementById('stopBtn');
            const bubbleContainer = document.getElementById('bubble-container');
            const resultDisplay = document.getElementById('result');
            
            let bubbles = [];
            let animationInterval;
            let selectionTimeout;
            
            // 生成随机颜色
            function getRandomColor() {
                const colors = [
                    '#FF6B6B', '#4ECDC4', '#45B7D1', '#FFBE0B', 
                    '#FB5607', '#FF006E', '#8338EC', '#3A86FF',
                    '#38B000', '#9D4EDD', '#F72585', '#90BE6D'
                ];
                return colors[Math.floor(Math.random() * colors.length)];
            }
            
            // 生成泡泡
            generateBtn.addEventListener('click', function() {
                const names = nameInput.value.split('\n').filter(name => name.trim() !== '');
                
                if (names.length === 0) {
                    alert('请输入至少一个名字！');
                    return;
                }
                
                // 清空现有泡泡
                bubbleContainer.innerHTML = '';
                bubbles = [];
                resultDisplay.textContent = '抽签结果将显示在这里';
                
                // 创建新泡泡
                names.forEach(name => {
                    const bubble = document.createElement('div');
                    bubble.className = 'bubble';
                    bubble.textContent = name.trim();
                    
                    // 随机大小
                    const size = Math.random() * 40 + 60;
                    bubble.style.width = `${size}px`;
                    bubble.style.height = `${size}px`;
                    
                    // 随机颜色
                    bubble.style.backgroundColor = getRandomColor();
                    
                    // 随机初始位置
                    const maxX = bubbleContainer.offsetWidth - size;
                    const maxY = bubbleContainer.offsetHeight - size;
                    bubble.style.left = `${Math.random() * maxX}px`;
                    bubble.style.top = `${Math.random() * maxY}px`;
                    
                    bubbleContainer.appendChild(bubble);
                    bubbles.push(bubble);
                });
                
                startBtn.disabled = false;
            });
            
            // 开始动画
            startBtn.addEventListener('click', function() {
                startBtn.disabled = true;
                stopBtn.disabled = false;
                generateBtn.disabled = true;
                resultDisplay.textContent = '抽签中...';
                
                // 移除之前的选中效果
                bubbles.forEach(bubble => bubble.classList.remove('selected'));
                
                // 设置泡泡动画
                animationInterval = setInterval(() => {
                    bubbles.forEach(bubble => {
                        if (!bubble.classList.contains('selected')) {
                            const maxX = bubbleContainer.offsetWidth - bubble.offsetWidth;
                            const maxY = bubbleContainer.offsetHeight - bubble.offsetHeight;
                            
                            // 随机移动
                            const newX = Math.random() * maxX;
                            const newY = Math.random() * maxY;
                            
                            bubble.style.transition = 'all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                            bubble.style.left = `${newX}px`;
                            bubble.style.top = `${newY}px`;
                        }
                    });
                }, 800);
                
                // 随机时间后停止并选择
                const duration = Math.random() * 3000 + 3000;
                selectionTimeout = setTimeout(stopAndSelect, duration);
            });
            
            // 停止抽签
            stopBtn.addEventListener('click', function() {
                clearTimeout(selectionTimeout);
                stopAndSelect();
            });
            
            // 停止并选择
            function stopAndSelect() {
                clearInterval(animationInterval);
                
                // 随机选择一个泡泡
                const randomIndex = Math.floor(Math.random() * bubbles.length);
                const selectedBubble = bubbles[randomIndex];
                
                // 应用选中效果
                selectedBubble.classList.add('selected');
                
                // 显示结果
                resultDisplay.innerHTML = `抽中的是：<span class="highlight">${selectedBubble.textContent}</span>`;
                
                stopBtn.disabled = true;
                generateBtn.disabled = false;
            }
        });
    </script>
</body>
</html>
